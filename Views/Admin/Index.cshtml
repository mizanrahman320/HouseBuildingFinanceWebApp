@model IEnumerable<string>
@{
    ViewData["Title"] = "Admin - Roles";
}
<h2>Roles</h2>

<form asp-action="CreateRole" method="post" class="row g-2 mb-3">
    <div class="col-auto">
        <input name="roleName" class="form-control" placeholder="New role name" />
    </div>
    <div class="col-auto">
        <button class="btn btn-success">Create Role</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr><th>Role Name</th></tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role</td>
            </tr>
        }
    </tbody>
</table>
