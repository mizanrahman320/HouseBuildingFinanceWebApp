@using Microsoft.AspNetCore.Identity
@using HouseBuildingFinanceWebApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - House Building Finance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.datatable.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nid_Verification_WebApp.styles.css" asp-append-version="true" />
    <style>
        .navbar .nav-link {
            transition: color 0.2s ease-in-out;
        }

        .navbar .nav-link:hover {
            color: #0d6efd; /* Bootstrap primary blue */
        }

        .dropdown-menu {
            font-size: 0.95rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-1 mb-4">
            <div class="container-fluid">
                <!-- Logo + Brand (Vertically Centered) -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Api" asp-action="Index">
                    <img src="~/Images/mbl_logo_nav.png" alt="Logo" style="height:40px; width:auto;" class="me-2">
                    <span class="fw-bold text-primary fs-5">House Building Finance</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarMain">

                    <!-- Left Links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-area="" asp-controller="Api" asp-action="Index">
                                <i class="bi bi-check2-circle me-1"></i> Verify
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-area="" asp-controller="Report" asp-action="Index">
                                <i class="bi bi-bar-chart-line me-1"></i> Reports
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold" asp-area="" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-people me-1"></i> User List
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold" asp-area="" asp-controller="Branch" asp-action="Index">
                                    <i class="bi bi-building me-1"></i> Branch
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Right User Section -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-semibold d-flex align-items-center" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3 border-0" aria-labelledby="accountDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                            <i class="bi bi-key me-2"></i> Change Password
                                        </a>
                                    </li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item d-flex align-items-center text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold d-flex align-items-center" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Developed By IT Division.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/datatable.bootstarp.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
