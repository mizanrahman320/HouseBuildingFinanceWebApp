<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sign In</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        @Html.Raw("@keyframes fadeInBody { from { opacity: 0; } to { opacity: 1; } }")
        @Html.Raw("@keyframes slideUp { from { transform: translateY(50px); opacity: 0;}to { transform: translateY(0); opacity: 1;}}")        
        @Html.Raw("@keyframes shake { 0%, 100% { transform: translateX(0); }  25% { transform: translateX(-4px); }75% { transform: translateX(4px); } }")        
    </style>

    <style>
        body {
            background: linear-gradient(135deg, #3b82f6, #06b6d4);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: fadeInBody 1s ease-in;
        }

        .login-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            width: 100%;
            max-width: 400px;
            animation: slideUp 0.8s ease-out;
        }

        .login-card .form-control {
            border-radius: 10px;
            border: 1px solid #ccc;
            transition: all 0.3s ease;
        }

            .login-card .form-control:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 8px rgba(59, 130, 246, 0.4);
            }

        .login-btn {
            background-color: #3b82f6;
            color: white;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .login-btn:hover {
                background-color: #2563eb;
                transform: scale(1.03);
            }

        .login-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .login-header i {
            font-size: 3rem;
            color: #3b82f6;
         }

         .input-validation-error {
            border-color: #dc2626 !important;
            animation: shake 0.2s ease-in-out 0s 2;
        }
    </style>
</head>
<body>
    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

