@model HouseBuildingFinanceWebApp.Models.LoanGateway.LoanAccountInfo
@{
    ViewData["Title"] = "Enter Transaction";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container py-5">
    <div class="card shadow-sm border-0 rounded-3 mx-auto" style="max-width: 650px;">
        <div class="card-header bg-success text-white text-center py-3 rounded-top">
            <h4 class="mb-0">Enter Loan Transaction</h4>
        </div>

        <div class="card-body p-4">
            <div class="alert alert-secondary d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-1 text-dark">Loan Account: <strong>@Model.LoanAC</strong></h6>
                    <small class="text-muted">Borrower: @Model.BorrowerName</small>
                </div>
                <span class="badge bg-primary px-3 py-2">@Model.BranchCode</span>
            </div>

            <form id="transactionForm" method="post" asp-action="SubmitTransaction">
                <input type="hidden" name="LoanAC" value="@Model.LoanAC" />
                <input type="hidden" name="BranchCode" value="@Model.BranchCode" />

                <div class="mb-4">
                    <label class="form-label fw-semibold">Payment Amount (BDT)</label>
                    <div class="input-group">
                        <span class="input-group-text">৳</span>
                        <input type="number" name="paymentAmount" step="1" min="1" class="form-control" placeholder="Enter payment amount" required />
                    </div>
                    <small class="text-muted">Example: 15000.00</small>
                </div>
             
                <!-- Purpose -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Purpose</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-tag"></i>
                        </span>
                        <select name="purpose" class="form-select" required>
                            <option value="">-- Select Purpose --</option>
                            <option value="11">11 - Memo (Loan Installment)</option>
                            <option value="12">12 - Application Fee</option>
                        </select>
                    </div>
                    <small class="text-muted">Choose the purpose of this transaction from the available options.</small>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Mobile Number</label>
                    <input type="tel" name="mobileNumber" class="form-control" pattern="01[3-9]\d{8}" placeholder="e.g. 017XXXXXXXX" required />
                    <small class="text-muted">Bangladesh format: starts with 01 and 11 digits total.</small>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle me-2"></i>Submit Transaction
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="position-fixed top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-none justify-content-center align-items-center" style="z-index: 1050;">
    <div class="text-center text-white">
        <div class="spinner-border text-light mb-3" style="width: 3rem; height: 3rem;" role="status"></div>
        <div>Submitting your transaction...</div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#transactionForm').on('submit', function () {
                $('#loadingOverlay').removeClass('d-none').addClass('d-flex');
            });

            // Auto-hide if page doesn't redirect (failsafe)
            setTimeout(() => {
                $('#loadingOverlay').addClass('d-none');
            }, 10000);
        });
    </script>
}
