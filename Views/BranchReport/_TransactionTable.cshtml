@using HouseBuildingFinanceWebApp.Models.LoanGateway
@model List<PaymentTransaction>

<table class="table table-hover table-bordered align-middle shadow-sm">
    <thead class="table-primary text-center">
        <tr>
            <th style="width: 20%;">Transaction Date</th>
            <th style="width: 20%;">Branch Code</th>
            <th style="width: 20%;">Amount</th>
            <th style="width: 20%;">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var txn in Model)
        {
            <tr>
                <td>@txn.PaymentDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@txn.BranchCode</td>
                <td class="text-end">@txn.PaymentAmount.ToString("N2")</td>
                <td class="text-center">
                    @if (txn.IsReceived.Equals("Y", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-success px-3 py-2">Success</span>
                    }
                    else if (txn.IsReceived.Equals("N", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-warning text-dark px-3 py-2">Pending</span>
                    }
                    else
                    {
                        <span class="badge bg-danger px-3 py-2">Failed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
