@using Microsoft.AspNetCore.Http
@using HouseBuildingFinanceWebApp.Models.LoanGateway
@model List<PaymentTransaction>

@{
    ViewData["Title"] = "Branch Report";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var hasData = Model != null && Model.Any();
    var totalAmount = hasData ? Model.Sum(x => x.PaymentAmount) : 0;

    // Fix for CS0103: Use Context.Request instead of Request
    var startDate = Context.Request.Query["startDate"].FirstOrDefault() ?? DateTime.Today.ToString("yyyy-MM-dd");
    var endDate = Context.Request.Query["endDate"].FirstOrDefault() ?? DateTime.Today.ToString("yyyy-MM-dd");
    //var endDate = Context.Request.Query["endDate"].FirstOrDefault() ?? DateTime.Today.AddDays(1).ToString("yyyy-MM-dd");

}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-bank"></i> Branch Transaction Report</h4>
            <span class="fs-6">Date: @DateTime.Now.ToString("yyyy-MM-dd")</span>
        </div>

        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3 mb-4">
                <div class="col-md-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control shadow-sm" id="startDate" name="startDate"
                           value="@startDate" />
                </div>

                <div class="col-md-3">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control shadow-sm" id="endDate" name="endDate"
                           value="@endDate" />
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100 shadow-sm">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>

            @if (hasData)
            {
                <div class="table-responsive">
                    <partial name="_TransactionTable" model="Model" />
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <div class="card bg-light border-0 shadow-sm">
                        <div class="card-body py-2 px-4">
                            <strong>Total Amount:</strong>
                            <span class="text-success fw-bold">@totalAmount.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <partial name="_NoData" />
            }
        </div>
    </div>
</div>
